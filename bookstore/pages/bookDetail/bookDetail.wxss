.book-info{
  background: #fff;
}
.top-image-bg{
  height: 130rpx;
  background: #cb1c36!important;
}
.top-image-box{
  width: 100%;
  display: flex;
  justify-content: center;
}
.top-image{
  width: 230rpx;
  height: 320rpx;
  box-shadow: 0 0 8rpx #666;
  margin-top: -160rpx;
  margin-bottom: 30rpx;
}
.book-name{
  margin: 0 auto;
  font-weight: bold;
  margin-bottom: 24rpx;
  text-align: center
}
.book-author{
  margin: 0 auto;
  margin-bottom: 50rpx;
  font-size:28rpx;
  color:#999;
  text-align: center;
}
.middle-box{
  width: 100%;
  height:200rpx;
  background: #f7f7f7;
}
.middle-btn-box{
  display: flex;
  justify-content: space-around;
  padding: 0 50rpx;
}
.btn{
  background: #ec304c;
  height: 70rpx;
  width: 230rpx;
  text-align: center;
  line-height: 70rpx;
  color: #fff;
  border-radius: 40rpx;
  margin-top: -35rpx;
  font-size: 28rpx;
}
.join-btn{
  background: #fff;
  color: #666;
  box-shadow: 1rpx 1rpx 6rpx #ccc;
}
.star-level{
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
}
.star{
  width: 30rpx;
  height: 30rpx;
  margin: 0 10rpx;
}
.last-chapter-box{
  display: flex;
  justify-content: center;
  font-size:26rpx;
}
.last-chapter{
   color:#40e0d0;
   margin-left: 20rpx;
}
.detail-and-comment-box{
  background: #f7f7f7;
  width: 100
}
.detail-and-comment-pannel{
  width: 90%;
  margin: 0 auto;
  background: #fff;
}
.toggle-box{
  display: flex;
  justify-content: space-around;
}
.detail-toggle,.comment-toggle{
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size:26rpx;
  color:#666;
  border-bottom: 2rpx solid #eee;
}
.red{
  border-bottom: 1px solid #ed3094;
  color: #ec304c;
}
.detail-box{
  padding: 20rpx;
  font-size:26rpx;
  color: #3a3a3a;
}
.catalog{
  display: flex;
  justify-content: center;
  background: #eee;
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 20rpx;
  color: #999;
}
.catalog-icon{
  width: 30rpx;
  height: 30rpx;
  margin-right:10rpx;
  margin-top:10rpx;
  color: #999
}
.change-recommend{
  display: flex;
  justify-content: space-between;
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 40rpx;
}
.right{
  display: flex;
}
.refresh-icon{
  width: 40rpx;
  height: 40rpx;
  margin-top: 6rpx;
}
.recommand-box{
  display: flex;
  justify-content: space-between;
}
.recommand-item{
  width: 200rpx;
  height: 280rpx;
}

.detail-box, .comment-box{
  height: 450rpx;
  overflow: auto;
}
.footer{
  width: 100%;
  height: 40rpx;
  background: #f7f7f7;
}
.comment-item{
  display: flex;
  padding: 20rpx;
}
.avator{
  width: 80rpx;
  height:80rpx;
  border-radius: 50%;
}
.comment-author{
  font-size:26rpx;
  margin-left:20rpx;
  color: #ff6347;
}
.comment-content{
  font-size:24rpx;
  line-height:36rpx;
  margin-left:20rpx;
  margin-top:6rpx;
  color: #666;
}
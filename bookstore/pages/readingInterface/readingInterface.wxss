/* pages/readingInterface/readingInterface.wxss */
.reading-interface{
  padding:20rpx;
}
.title{
  font-size: 36rpx;
  font-weight: bold;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.content{
  margin-top: 15rpx;
  line-height: 2;
  font-size: 32rpx;
  color: #3a3a3a;
}

.toggle-chapter{
  display: flex;
  justify-content: center;
  margin: 0 auto;
  margin-top: 20rpx;
  margin-bottom: 100rpx;
}
.last-chapter,.next-chapter{
  font-size: 28rpx;
   line-height: 60rpx;
   padding: 0 20rpx;
}
.line{
  height: 60rpx;
  width: 4rpx;
  background: #fff;
}
.toggle-chapter{
  color: #ffffff;
  background: #ec304c;
  height: 60rpx;
  line-height: 60rpx;
  width: 300rpx;
  border-radius: 40rpx;
}

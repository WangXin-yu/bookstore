.input-box {
  width: 92%;
  margin: 20rpx auto;
  height: 70rpx;
  border-radius: 20rpx;
  background: #eee;
  display: flex;
  justify-content: center;
}

.search_icon {
  width: 40rpx;
  height: 40rpx;
  margin-top: 16rpx;
}

.search-input {
  width: 50%;
  padding: 10rpx 0;
  height: 70rpx;
  line-height: 70rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #999;
}

.recommand-box {
  display: flex;
  justify-content: space-between;
  margin: 0 30rpx;
  font-size: 30rpx;
  height: 40rpx;
}

.refresh-box {
  display: flex;
  color: #fa8072;
}

.refresh_icon {
  width: 40rpx;
  height: 40rpx;
}

.rand_hotwords_box {
  display: flex;
  flex-wrap: wrap;
  margin: 30rpx 30rpx;
}

.rand_hotwords {
  margin-right: 40rpx;
  margin-bottom: 20rpx;
  padding: 10rpx;
  color: #fff;
  font-size: 28rpx;
}

.bg1 {
  background: #ffc0cb;
}

.bg2 {
  background: #7b68ee;
}

.bg3 {
  background: #ff69b4;
}

.bg4 {
  background: #66cdaa;
}

.bg5 {
  background: #fa8072;
}

.bg6 {
  background: #228b22;
}

.search-book-box {
  margin: 0 30rpx;
  margin-top: 60rpx;
}

.search-book-item {
  display: flex;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #eee;
}

.search-book-image {
  width: 200rpx;
  height: 290rpx;
}

.right-detail{
  margin-left:20rpx;
}
.title {
  font-weight: bold;
  margin-bottom: 15rpx;
  font-size:30rpx;
}

.author {
  font-size: 24rpx;
  color: #999;
   margin-bottom: 15rpx;
}

.shortIntro {
  height: 120rpx;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #999;
  line-height: 40rpx;
}

.latelyFollower {
  font-size: 24rpx;
  color:#fa8072;
  margin-top:40rpx;
}